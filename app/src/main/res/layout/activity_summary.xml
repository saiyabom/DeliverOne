<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity"
    android:weightSum="1">
    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/app_bar"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Cost"
            android:textSize="25dp"
            android:id="@+id/number_of_item_text"
            android:paddingRight="80sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:layout_alignRight="@id/number_of_item_text"
            android:textSize="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="300"
            android:textSize="40dp"
            android:textColor="@color/md_red_800"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:id="@+id/deliver_cost"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"

        android:id="@+id/linearLayout"
        android:layout_above="@+id/detail_text"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost Total"

            android:textSize="25dp"
            android:paddingRight="100dp"
            android:id="@+id/cost_total_text"
            android:layout_alignTop="@+id/textView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="

            android:textSize="25dp"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:textColor="@color/md_blue_800"
            android:textSize="50dp"

            android:paddingRight="10dp"
            android:id="@+id/total_cost"/>

    </LinearLayout>
