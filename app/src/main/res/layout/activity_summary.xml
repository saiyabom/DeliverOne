        android:id="@+id/comment_order"
        android:layout_above="@+id/send_order_button"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="81dp" />
    <Button
        android:layout_width="300sp"
        android:layout_height="wrap_content"
