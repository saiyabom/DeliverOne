<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/PrimaryBackgroundColor</item>
        <item name="colorPrimaryDark">@color/SecondaryBackgroundColor</item>
        <item name="colorAccent">@color/ColorBackgroundAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/BackgroundColor</item>
    </style>

    <style name="Theme.PersonalNotes" parent="Theme.Base"/>

    <style name="MainLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MainCardView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="LeftButtonBaseStyle">
        <item name="android:textColor">@color/black_button</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="RightButtonBaseStyle" parent="@style/LeftButtonBaseStyle">
        <item name="android:textColor">@color/orange_button</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textAllCaps">true</item>-->
        <item name="android:textSize">@dimen/button_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="MyCardPhoto" parent="CardPhoto">

        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/bigger_title_size</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->

        <item name="android:gravity">bottom|left</item>
        <item name="android:paddingLeft">@dimen/big_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="CardDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/PrimaryTextColor</item>
        <item name="colorControlHighlight">@color/PrimaryBackgroundColor</item>
        <item name="android:actionMenuTextColor">@color/PrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/PrimaryTextColor</item>
        <item name="android:background">@color/PrimaryBackgroundColor</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/PrimaryTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
